  {
    "property": "mod.tab-preview.style",
    "label": "Tooltip style",
    "type": "dropdown",
    "options": [
      {
        "label": "Default",
        "value": "default"
      },
      {
        "label": "Minimal",
        "value": "minimal"
      },
      {
        "label": "Card",
        "value": "card"
      }
