  },
  {
    "property": "mod.tab-preview.tooltip-size",
    "label": "Tooltip font size (e.g., 14px)",
    "type": "string",
    "placeholder": "14px",
    "defaultValue": "14px"
  },
  {
    "property": "mod.tab-preview.favicon-scale",
    "label": "Favicon zoom scale (e.g., 1.3)",
    "type": "string",
    "placeholder": "1.3",
    "defaultValue": "1.3"
  }
