[
  {
    "property": "mod.tab-preview.enable-large-tooltip",
    "label": "Enable large tooltip on tab hover",
    "type": "checkbox",
    "defaultValue": true
  },
  {
    "property": "mod.tab-preview.enable-highlight",
    "label": "Highlight tabs on hover with shadow and lift effect",
    "type": "checkbox",
    "defaultValue": true
  },
  {
    "property": "mod.tab-preview.enable-favicon-zoom",
    "label": "Zoom favicon on tab hover",
    "type": "checkbox",
    "defaultValue": false
  },
  {
    "property": "mod.tab-preview.show-full-title",
    "label": "Show full tab title on hover (no truncation)",
    "type": "checkbox",
    "defaultValue": false
